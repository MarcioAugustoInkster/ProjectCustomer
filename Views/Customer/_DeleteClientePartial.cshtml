@model int

@{
    ViewData["Title"] = "Excluir Cliente";
}

<div class="modal-dialog modal-lg" role="contentinfo">
    <div class="modal-content w-100">
        <form role="form" id="formDelete" asp-controller="Customer" asp-action="DeleteConfirm" method="post">
            <div class="modal-header">
                <h3>Exclusão</h3>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">Close</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="delValueCod" value="@Model"/>
                <h5 class="mb-2 text-align-left">Excluir realmente este cliente?</h5>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary btn-sm">Excluir</button>
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/site.js"></script>